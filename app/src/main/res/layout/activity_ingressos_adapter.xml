<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/lblTituloFilmeM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filme"
            android:textAlignment="center"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblItemM"
                    android:layout_width="174dp"
                    android:layout_height="wrap_content"
                    android:text="Descrição"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblQuantidadeM"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:text="Quant"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblPrecoUnidadeM"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:text="Preço"
                    android:textAlignment="viewEnd"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblInteiraM"
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:text="Entrada Inteira"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lblQtdInteiraM"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lblPrecoInteiraM"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:text="R$ 22,00"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblMeia"
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:text="Meia Entrada"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lblQtdMeiaM"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lblPrecoMeiaM"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:text="R$ 22,00"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblPipocaRefriM"
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:text="Pipoca + Refrigerante"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lblQtdPipocaRefriM"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lblPrecoPipocaRefriM"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:text="R$ 22,00"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblTotal"
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:text="TOTAL"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblEspaco"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text=""
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lblValorTotalM"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:text="R$ 0.00"
                    android:textAlignment="viewEnd"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFFFFF" />
</LinearLayout>
